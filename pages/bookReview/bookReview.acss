page {
  background-color: #fff;
}
.root-container{
  width: 100%;
}
.group-container {
  margin: 40rpx auto;
  width: 670rpx;
  padding-bottom: 25rpx;
}
.title{
  margin-top: 40rpx;
  font-size: 48rpx;
  color: #3E455B;
  text-align: left;
  line-height: 48rpx;
}
.input-text-area{
  background: #F9FAFC;
  border-radius: 16rpx;
  margin:40rpx auto 0;
  height: 254rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #3E455B;
  text-align: justify;
  line-height: 42rpx;
}
.add-book-container{
  background: #FFA600;
  width: 670rpx;
  height: 88rpx;
  margin: 80rpx auto 0;
  box-shadow: 0 12rpx 32rpx -16rpx #FFA600;
  border-radius: 44rpx;
  text-align:center;
  font-size: 36rpx;
  color: #FFFFFF;
  line-height: 88rpx;
}